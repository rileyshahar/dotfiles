#!/usr/bin/env bash

set -euo pipefail

opts="\
search
std
reference
result
option
iterator
vec
itertools
anyhow
thiserror
clap
rayon
tokio
serde
rand
log
regex
nom
parking_lot
macro fragment specifiers\
"

modules="\
search
assert_matches
async_iter
intrinsics
simd
alloc
any
arch
array
ascii
backtrace
borrow
boxed
cell
char
clone
cmp
collections
convert
default
env
error
f32
f64
ffi
fmt
fs
future
hash
hint
io
iter
marker
mem
net
num
ops
option
os
panic
path
pin
prelude
primitive
process
ptr
rc
result
slice
str
string
sync
task
thread
time
vec\
"

app=$(echo "$opts" | rofi -dmenu)
case "$app" in

std)
  mod=$(echo "$modules" | rofi -dmenu)
  if [[ $mod == "search" ]]; then
    term=$(rofi -dmenu)
    url="https://doc.rust-lang.org/stable/std/index.html?search=$term"
  else
    url="https://doc.rust-lang.org/stable/std/$mod/index.html"
  fi
  ;;

reference)
  url="https://doc.rust-lang.org/reference/"
  ;;

search)
  term=$(rofi -dmenu)
  url="https://docs.rs/releases/search?query=$term"
  ;;

"macro fragment specifiers")
  url="https://veykril.github.io/tlborm/decl-macros/macros-methodical.html#metavariables"
  ;;

vec)
  url="https://doc.rust-lang.org/stable/std/vec/struct.Vec.html"
  ;;

result)
  url="https://doc.rust-lang.org/stable/std/result/enum.Result.html"
  ;;

option)
  url="https://doc.rust-lang.org/stable/std/option/enum.Option.html"
  ;;

iterator)
  url="https://doc.rust-lang.org/std/iter/trait.Iterator.html"
  ;;

*)
  url="https://docs.rs/$app"
  ;;
esac

firefox "$url"
qtile cmd-obj -o screen -f toggle_group -a ï‰©
